{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.env*",
      "**/serviceAccountKey.json"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "handler"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(css|js)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/css"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": ".",
    "runtime": "python312",
    "env": {
      "source": ".env"
    }
  }
} 